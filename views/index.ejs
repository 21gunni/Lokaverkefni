<!DOCTYPE html>
<html lang="is">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="stylesheets/style.css">
  <title>Lokaverkefni - Matartilboð!</title>
</head>

<body>
  <div class="navbar">
    <img class="navLogo" src="https://i.imgur.com/hqgVfnK.png" alt="">
  </div>
  <header>
    <section class="header-section">
      <img class="Logo" src="https://i.imgur.com/qz2eCBl.png" alt="">
      <img class="Logo" src="https://i.imgur.com/vzUn4CY.png" alt="">
    </section>
  </header>
  <main>
    <!-- Test div random takka -->
    <div>
      
    </div>

    <section class="Tilbod_1">

      <% nova.novaPlaces.forEach(function (food){ %>

        <div class="Tilbodin">

          <img class="Brynjar" src="<%= food.img%>" alt="Picture of the restaurant">

          <div class="eventName">
            <p class="stadurNafn">
              <%= food.name %>
            </p>
          </div>

          <div class="about">
            <p class="stadurUppl">
              <%= food.about %>
            </p>
          </div>

          <div class="Location">
            <p>
              <%= food.address %>
            </p>
            <% food.days.forEach(function (day){ %>
              <p>
                <%= day.name %>
              </p>
              <% }) %>
          </div>
        </div>
        <% }) %>
    </section>

