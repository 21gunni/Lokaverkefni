      <p class="slogan">A place to find various food related discounts!</p>
    </section>
  </header>
  <main>
    <!-- Test div random takka -->
    <div>
      <form action="/randomNova" method="GET">
        <button>Random Nova</button>
      </form>
      <form action="/randomVodafone" method="GET">
        <button>Random Vodafone</button>
      </form>
      <form action="/randomTwoForOne" method="GET">
        <button>Random TwoForOne </button>
      </form>
      <form action="/randomAll" method="GET">
        <button>Random All </button>
      </form>
    </div>


    <section class="Nova_tilbod">
      <img class="NovaLogo" src="https://i.imgur.com/MuhUv5h.png" alt="">
      <div class="Nova_1">

        <% nova.novaPlaces.forEach(function (food){ %>

          <div class="Tilbodin">

            <img class="Brynjar" src="<%= food.img%>" alt="Picture of the restaurant">

            <div class="eventName">
              <p class="stadurNafn">
                <%= food.name %>
              </p>
            </div>

            <div class="about">
              <p class="stadurUppl">
                <%= food.about %>
              </p>
            </div>

            <div class="Location">
              <p>
                <a href='http://maps.google.com/?q=<%= food.address %>'>
                  <%= food.address %>
                </a>
              </p>

              <% food.days.forEach(function (day){ %>
                <p>
                  <%= day.name %>
                </p>
                <% }) %>
            </div>
          </div>
          <% }) %>
      </div>
    </section>


    <section class="Vodafone_tilbod">
      <img class="VodLogo" src="https://i.imgur.com/EBmnIyo.png" alt="">
      <div class="Vodafone_2">

        <% vodafone.vodafonePlaces.forEach(function (food){ %>

          <div class="Tilbodin">


            <img class="Brynjar" src="<%= food.img%>" alt="Picture of the restaurant">

            <div class="eventName">
              <p class="stadurNafn">
                <%= food.name %>
              </p>
            </div>

            <div class="about">
              <p class="stadurUppl">
                <%= food.about %>
              </p>
            </div>

            <div class="Location">
              <a href="<%= food.website_url %>">
                <%= food.name %>
              </a>

              <% food.days.forEach(function (day){ %>
                <p>
                  <%= day.name %>
                </p>
                <% }) %>
            </div>
          </div>
          <% }) %>
      </div>
    </section>


