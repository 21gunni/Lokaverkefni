  <header>
    <section class="header-section">
      <img class="Logo" src="https://i.imgur.com/qz2eCBl.png" alt="">
      <img class="Logo" src="https://i.imgur.com/vzUn4CY.png" alt="">
      <p class="slogan">A place to find various food related discounts!</p>
    </section>
  </header>
  <main>
    <!-- Test div random takka -->
    <div>
      
    </div>
    
    
    <section class="Nova_tilbod">
        <img class="NovaLogo" src="https://i.imgur.com/MuhUv5h.png" alt="">
      <div class="Nova_1">
      
      <% nova.novaPlaces.forEach(function (food){ %>

        <div class="Tilbodin">

          <img class="Brynjar" src="<%= food.img%>" alt="Picture of the restaurant">

          <div class="eventName">
            <p class="stadurNafn">
              <%= food.name %>
            </p>
          </div>

          <div class="about">
            <p class="stadurUppl">
              <%= food.about %>
            </p>
          </div>

          <div class="Location">
            <p>
              <%= food.address %>
            </p>
            <% food.days.forEach(function (day){ %>
              <p>
                <%= day.name %>
              </p>
              <% }) %>
          </div>
        </div>
        <% }) %>
      </div>
    </section>
    

