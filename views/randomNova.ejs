    <div class="randomIsTheShit">

      <div class="takkaStuff">
      <form action="/randomNova" method="GET">
        <input class="mynd1" type="image" src="https://i.imgur.com/MuhUv5h.png" />
      </form>
      </div>

      <div class="takkaStuff">
      <form action="/randomVodafone" method="GET">
        <input class="mynd2" type="image" src="https://i.imgur.com/EBmnIyo.png" />
      </form>
      </div>

      <div class="takkaStuff">
      <form action="/randomTwoForOne" method="GET">
        <input class="mynd3" type="image" src="https://i.imgur.com/A76Uhu2.png" />
      </form>
      </div>
      
      <div class="takkaStuff">  
      <form action="/randomAll" method="GET">
        <input class="mynd4" type="image" src="https://i.imgur.com/MuhUv5h.png" />
      </form>
      </div>

      <div class="random_1">

            <div class="Tilbodin">
  
              <img class="Brynjar" src="<%= randomNova.img%>" alt="Picture of the restaurant">
  
              <div class="eventName">
                <p class="stadurNafn">
                  <%= randomNova.name %>
                </p>
              </div>
  
              <div class="about">
                <p class="stadurUppl">
                  <%= randomNova.about %>
                </p>
              </div>
  
              <div class="Location">
                <p>
                  <a href='http://maps.google.com/?q=<%= randomNova.address %>'>
                  
                  </a>
                </p>
  
                <% randomNova.days.forEach(function (day){ %>
                  <p>
                    <%= day.name %>
                  </p>
                  <% }) %>
              </div>
            </div>
            
        </div>

      </div>
    </div>
    </section>


    <section class="Nova_tilbod">
      <img class="NovaLogo" src="https://i.imgur.com/MuhUv5h.png" alt="">
      <div class="Nova_1">

        <% nova.novaPlaces.forEach(function (food){ %>

          <div class="Tilbodin">

            <img class="Brynjar" src="<%= food.img%>" alt="Picture of the restaurant">

            <div class="eventName">
              <p class="stadurNafn">
                <%= food.name %>
              </p>
            </div>

            <div class="about">
              <p class="stadurUppl">
                <%= food.about %>
              </p>
            </div>

            <div class="Location">
              <p>
                <a href='http://maps.google.com/?q=<%= food.address %>'>
                  <%= food.address %>
                </a>
              </p>

              <% food.days.forEach(function (day){ %>
                <p>
                  <%= day.name %>
                </p>
                <% }) %>
            </div>
          </div>
          <% }) %>
      </div>
    </section>


    <section class="Vodafone_tilbod">
      <img class="VodLogo" src="https://i.imgur.com/EBmnIyo.png" alt="">
      <div class="Vodafone_2">

        <% vodafone.vodafonePlaces.forEach(function (food){ %>

