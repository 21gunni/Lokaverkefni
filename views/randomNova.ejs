            </div>

            <div class="about">
              <p class="stadurUppl">
                <%= food.about %>
              </p>
            </div>

            <div class="Location">
              <a href="<%= food.website_url %>">
                <%= food.name %>
              </a>

              <% food.days.forEach(function (day){ %>
                <p>
                  <%= day.name %>
                </p>
                <% }) %>
            </div>
          </div>
          <% }) %>
      </div>
    </section>


